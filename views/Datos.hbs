<h1>Skate Park</h1>

<div class="py-4">
  <h2>Datos del perfil</h2>
  <hr class="w-50 mx-auto" />
  {{#if message}}
  <div class="alert alert-success w-50 mx-auto">{{message}}</div>
  {{/if}}
  <form enctype="multipart/form-data">
    <div class="form-group row w-50 m-auto">
      <div class="form-group col-12 col-sm-6">
        <label>Email</label>
        <input class="form-control m-auto" value="{{email}}" disabled/>
        <input class="d-none" value="{{email}}" name="email"/>
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Nombre</label>
        <input class="form-control m-auto" value="{{nombre}}" name="nombre"/>
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Password</label>
        <input type="password" class="form-control m-auto" value="1234" name="password"/>
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Repita la password</label>
        <input type="password" class="form-control m-auto" value="1234" name="password__confirmation"/>
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>AÃ±os de experiencia</label>
        <input class="form-control m-auto" value="{{anos_experiencia}}" name="anos_experiencia"/>
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Especialidad</label>
        <input class="form-control m-auto" value="{{especialidad}}" name="especialidad"/>
      </div>
    </div>
    <div class="mt-4 mb-1">
      <button class="btn btn-primary" formaction="/skatepark/skater" formmethod="post">Actualizar</button>
    </div>
    <div>
      <button class="btn btn-danger" formaction="/skatepark/skater/delete" formmethod="post">Eliminar cuenta</button>
    </div>
  </form>
</div>